{
    "python.defaultInterpreterPath": "./python_backend/venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    
    "files.associations": {
        "*.py": "python",
        "*.json": "json"
    },
    
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/venv": false,
        "**/node_modules": true
    }
} 